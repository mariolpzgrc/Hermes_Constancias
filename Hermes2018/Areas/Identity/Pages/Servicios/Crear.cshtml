@page "/Servicios/Crear"
@model CrearModel

@section styles
    {
    <link type="text/css" rel="stylesheet" href="~/lib/jquery-flexdatalist/jquery.flexdatalist.min.css" />
    <link type="text/css" rel="stylesheet" href="~/css/Areas/Identity/Pages/Servicios/Crear.min.css" asp-append-version="true" />
}

<div class="content-wrapper ml-0 bg-white pt-0">
    <div class="container-fluid" id="logged-in">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Servicios/Index">Servicios</a>
                            </li>
                            <li class="breadcrumb-2-item active display-flex">Nuevo Servicio</li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Nuevo Servicio</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <form id="form-add-User-group" method="post">
                    <div class="row">
                        <div class="col-sm-4 col-md-4">
                            <div class="form-group">
                                <label asp-for="Crear.NombreServicio" class="col-form-label font-bold-12"></label>
                                <div class="">
                                    <input asp-for="Crear.NombreServicio" class="form-control form-control-sm" placeholder="Nombre del servicio" />
                                    <small class="form-text text-muted">El nombre del calendario debe ser como máximo de 80 caracteres.</small>
                                    <span asp-validation-for="Crear.NombreServicio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <hr />
                        </div>
                        <div class="col-sm-4 col-md-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Crear.Usuario" class="col-form-label font-bold-12"></label>
                                        <div class="" id="control-busqueda">
                                            <input asp-for="Crear.Usuario" class="form-control form-control-sm w-100" placeholder="Buscar" />
                                            <small class="form-text text-muted">Escriba el nombre de usuario.</small>
                                            <span asp-validation-for="Crear.Usuario" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Crear.Nombre" class="col-form-label font-bold-12"></label>
                                        <div class="">
                                            <input asp-for="Crear.Nombre" class="form-control disabled border-white bg-white" placeholder="" readonly />
                                            <span asp-validation-for="Crear.Nombre" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Crear.Correo" class="col-form-label font-bold-12"></label>
                                        <div class="">
                                            <input asp-for="Crear.Correo" class="form-control disabled border-white bg-white" placeholder="" readonly />
                                            <span asp-validation-for="Crear.Correo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="pt-3">
                                <a asp-area="Identity" asp-page="/Servicios/Index" class="btn btn-light">Cancelar</a>
                                <button type="submit" id="btn-saveAndExit" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/lib/jquery-flexdatalist/jquery.flexdatalist.min.js"></script>
    <script type="text/javascript" src="~/js/Areas/Identity/Pages/Servicios/Crear.min.js" asp-append-version="true"></script>
}