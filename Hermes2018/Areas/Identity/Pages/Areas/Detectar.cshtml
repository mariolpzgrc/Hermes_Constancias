@page "/Areas/Detectar/{id:int}/{regionId:int}/{areaPadreId:int?}"
@model Hermes2018.Areas.Identity.Pages.Areas.DetectarModel

    <div class="content-wrapper ml-0 bg-white pt-0">
        <div class="container-fluid" id="logged-in">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-6 col-sm-8 col-md-8 col-lg-8 col-xl-8 pt-2">
                            <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                                <li class="breadcrumb-2-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                                </li>

                                @if (Model.EsAdminGral)
                                {
                                    <li class="breadcrumb-2-item">
                                        <a asp-area="Identity" asp-page="/Areas/Region" asp-route-id="">Regiones</a>
                                    </li>
                                }
                                <li class="breadcrumb-2-item">
                                    <a asp-area="Identity" asp-page="/Areas/Index" asp-route-id="@Model.RegionId" asp-route-areapadreid="@Model.AreaPadreId">Áreas</a>
                                </li>
                                <li class="breadcrumb-2-item active display-flex" aria-current="page">Detecta áreas</li>
                            </ol>
                        </div>
                        <div class="col-12">
                            <hr class="hr-thick mb-1 mt-1" />
                            <h5>Detecta Áreas</h5>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm border-bottom responsive">
                            <thead class="bg-light">
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Clave</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var area in Model.Listado)
                                {
                                    <tr>
                                        <td>@area.Nombre</td>
                                        <td>@area.Clave</td>

                                        <td class="font-regular-12 text-center">
                                            @if (ConstEstadoAreaPorAgregar.EstadoN1 == area.EstadoId)
                                            {
                                                <a asp-area="Identity" asp-page="/Areas/Agregar" asp-route-id="@area.Clave" asp-route-areaid="@Model.AreaId" asp-route-regionid="@Model.RegionId" asp-route-areapadreid="@Model.AreaPadreId" class="pl-2 pr-2" title="Agregar"><i class="far fa-plus-square font-gray"></i></a>
                                            }
                                            else
                                            {
                                                <span class="font-gray small" title="Añadida">Añadida</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
