@page "/Areas/Buscar/{id:int}/{areaPadreId:int?}"
@model Hermes2018.Areas.Identity.Pages.Areas.BuscarModel

@section Styles {
    <link type="text/css" rel="stylesheet" href="~/lib/jquery-flexdatalist/jquery.flexdatalist.min.css" />
    <link type="text/css" rel="stylesheet" href="~/lib/bootstrap4-toggle/css/bootstrap4-toggle.min.css" />
    <link type="text/css" rel="stylesheet" href="~/css/Areas/Identity/Pages/Areas/Buscar.min.css"/>
}

@section ScriptsPrioritarios
    {
    <script type="text/javascript" src="~/lib/jquery-flexdatalist/jquery.flexdatalist.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap4-toggle/js/bootstrap4-toggle.min.js"></script>
}

<div class="@string.Format("{0}", (ConstRol.RolUsuario.Contains(Model.InfoUsuarioClaims.Rol))? "content-wrapper pt-1": "content-wrapper ml-0 bg-white pt-0")">
    <div class="container-fluid" id="@string.Format("{0}", (ConstRol.RolUsuario.Contains(Model.InfoUsuarioClaims.Rol))? string.Empty:"logged-in" )">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>
                            <li class="breadcrumb-2-item"><a asp-area="Identity" asp-page="/Areas/Index" asp-route-id="@Model.RegionId" asp-route-areapadreid="@Model.AreaPadreId">Regiones</a></li>
                            <li class="breadcrumb-2-item active" aria-current="page">Buscar Área</li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Buscar un área</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group" id="control-busqueda">
                                <div class="">
                                    <input type="text" id="Buscar" class="form-control" placeholder="Buscar" />
                                    <small class="form-text text-muted">Escriba el nombre del area.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 contiene-info">
                            <div class="row">
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Nombre</label>
                                        <div>
                                            <span id="Nombre" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Clave</label>
                                        <div>
                                            <span id="Clave" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Días Compromiso</label>
                                        <div>
                                            <span id="DiasCompromiso" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Dirección</label>
                                        <div>
                                            <span id="Direccion" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Teléfono</label>
                                        <div>
                                            <span id="Telefono" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Región</label>
                                        <div>
                                            <span id="Region" />
                                        </div>
                                    </div>
                                </div>
                                <div id="contiene_areapadre" class="col-xl-4 col-lg-4 col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label class="lbl-info d-none col-form-label pb-0 font-weight-bold">Área Padre</label>
                                        <div>
                                            <span id="AreaPadre" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-2">
                        <div>
                            <a asp-area="Identity" asp-page="/Areas/Index" class="btn btn-light">Regresar</a>
                        </div>
                    </div>

            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/js/Areas/Identity/Pages/Areas/Buscar.min.js" asp-append-version="true"></script>
}
