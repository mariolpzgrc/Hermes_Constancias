@page  "/Areas/Borrar/{id:int}/{regionId:int}/{areaPadreId:int?}"
@model BorrarModel

<div class="content-wrapper ml-0 bg-white pt-0">
    <div class="container-fluid" id="logged-in">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            @if (Model.EsAdminGral)
                            {
                                <li class="breadcrumb-2-item">
                                    <a asp-area="Identity" asp-page="/Areas/Region" asp-route-id="">Regiones</a>
                                </li>
                            }
                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Areas/Index" asp-route-id="@Model.RegionId" asp-route-areapadreid="@Model.AreaPadreId">Áreas</a>
                            </li>
                            <li class="breadcrumb-2-item active display-flex" aria-current="page">Borrar área</li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Borrar área</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger error-list-clean"></div>
                            <input asp-for="RegionId" class="sin-indicador" />
                            <input asp-for="EsAdminGral" class="sin-indicador" />
                            <dl class="">
                                <dt class="">Nombre</dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Nombre)
                                </dd>
                                <dt class="">Dirección</dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Direccion)
                                </dd>
                                <dt class="">Teléfono</dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Telefono)
                                </dd>
                                <dt class="">Región</dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Region)
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Borrar.Area_Padre))
                                {
                                    <dt class="">Área padre</dt>
                                    <dd class="">
                                        @Html.DisplayFor(x => x.Borrar.Area_Padre)
                                    </dd>
                                }

                                <dt class="">Visible</dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Visible)
                                </dd>
                            </dl>
                            @Html.HiddenFor(x => x.Borrar.AreaId, new { @class="sin-indicador" })

                            <div>
                                <p>¿Desea borrar esta área?</p>
                            </div>
                            <div>
                                <a asp-area="Identity" asp-page="/Areas/Index" asp-route-id="@Model.RegionId" asp-route-areapadreid="@Model.AreaPadreId" class="btn btn-light" title="Regresar">Cancelar</a>
                                <button type="submit" class="btn btn-danger" title="Borrar definitivamente">Borrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
