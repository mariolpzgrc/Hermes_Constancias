@page "/Areas/Baja/{id:int}/{regionId:int}"
@model Hermes2018.Areas.Identity.Pages.Areas.BajaModel

@section styles
    {
    <link type="text/css" rel="stylesheet" href="~/lib/bootstrap4-toggle/css/bootstrap4-toggle.min.css">
    <link type="text/css" rel="stylesheet" href="~/lib/jquery-bootstrap-touchspin/jquery.bootstrap-touchspin.min.css">
    <link type="text/css" rel="stylesheet" href="~/lib/max-favilli-tagmanager/tagmanager.css" />
}
@section ScriptsPrioritarios
    {
    <script type="text/javascript" src="~/lib/bootstrap4-toggle/js/bootstrap4-toggle.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
}

<div class="content-wrapper ml-0 bg-white pt-0">
    <div class="container-fluid" id="logged-in">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            @if (Model.EsAdminGral)
                            {
                                <li class="breadcrumb-2-item">
                                    <a asp-area="Identity" asp-page="/Areas/Region" asp-route-id="">Regiones</a>
                                </li>
                            }
                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Areas/Index" asp-route-id="@Model.RegionId">Áreas</a>
                            </li>
                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Areas/Detalles" asp-route-id="@Model.AreaId" asp-route-regionid="@Model.RegionId">Detalle del área</a>
                            </li>
                            <li class="breadcrumb-2-item active display-flex" aria-current="page">Dar de baja</li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Dar de baja el área</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger error-list-clean"></div>
                            <input asp-for="AreaId" />
                            <input asp-for="RegionId" />
                            <input asp-for="EsAdminGral" />
                            <input asp-for="BajaViewModel.AreaId" />

                            <div class="row">
                                <div class="col-12">
                                    <dl class="">
                                        <dt class="">Nombre</dt>
                                        <dd class="">
                                            @Html.DisplayFor(x => x.BajaViewModel.Nombre)
                                        </dd>
                                        <dt class="">Dirección</dt>
                                        <dd class="">
                                            @Html.DisplayFor(x => x.BajaViewModel.Direccion)
                                        </dd>
                                        <dt class="">Teléfono</dt>
                                        <dd class="">
                                            @Html.DisplayFor(x => x.BajaViewModel.Telefono)
                                        </dd>
                                        <dt class="">Región</dt>
                                        <dd class="">
                                            @Html.DisplayFor(x => x.BajaViewModel.Region)
                                        </dd>

                                        @if (!string.IsNullOrEmpty(Model.BajaViewModel.Area_Padre))
                                        {
                                            <dt class="">Área padre</dt>
                                            <dd class="">
                                                @Html.DisplayFor(x => x.BajaViewModel.Area_Padre)
                                            </dd>
                                        }

                                        <dt class="">Visible</dt>
                                        <dd class="">
                                            @Html.DisplayFor(x => x.BajaViewModel.Visible)
                                        </dd>
                                    </dl>
                                </div>
                                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                    <div class="form-group pb-3">
                                        <label asp-for="BajaViewModel.TipoBaja" class="col-form-label pb-0 font-weight-bold"></label>
                                        <div class="">
                                            <select asp-for="BajaViewModel.TipoBaja" class="form-control">
                                                <option selected value="">[Seleccione una opción]</option>
                                                <option value="@ConstTipoDeBajaArea.TipoDeBajaN1">@ConstTipoDeBajaArea.TipoDeBajaT1</option>
                                                <option value="@ConstTipoDeBajaArea.TipoDeBajaN2">@ConstTipoDeBajaArea.TipoDeBajaT2</option>
                                            </select>
                                            <span asp-validation-for="BajaViewModel.TipoBaja" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <a asp-area="Identity" asp-page="/Areas/Detalles" asp-route-id="@Model.AreaId" asp-route-regionid="@Model.RegionId" class="btn btn-light" title="Regresar">Cancelar</a>
                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
