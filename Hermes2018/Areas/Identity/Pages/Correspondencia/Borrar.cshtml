@page "/Correspondencia/Borrar/{id}"
@model Hermes2018.Areas.Identity.Pages.Correspondencia.BorrarModel

<div class="content-wrapper pt-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>
                            <li class="breadcrumb-2-item active display-flex" aria-current="page">Eliminar Borrador</li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Eliminar Borrador</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger error-list-clean"></div>
                            <input asp-for="Borrar.DocumentoBaseId" class="sin-indicador" />
                            <input asp-for="Borrar.Folio" class="sin-indicador" />
                            <input asp-for="Borrar.Asunto" class="sin-indicador" />
                            <input asp-for="Borrar.Tipo" class="sin-indicador" />
                            <input asp-for="Borrar.Fecha" class="sin-indicador" />
                            <input asp-for="Borrar.FechaPropuesta" class="sin-indicador" />
                            <dl class="">
                                <dt class="">
                                    @Html.DisplayNameFor(x => x.Borrar.Folio)
                                </dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Folio)
                                </dd>

                                <dt class="">
                                    @Html.DisplayNameFor(x => x.Borrar.Asunto)
                                </dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Asunto)
                                </dd>

                                <dt class="">
                                    @Html.DisplayNameFor(x => x.Borrar.Tipo)
                                </dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Tipo)
                                </dd>

                                <dt class="">
                                    @Html.DisplayNameFor(x => x.Borrar.Fecha)
                                </dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.Fecha)
                                </dd>

                                <dt class="">
                                    @Html.DisplayNameFor(x => x.Borrar.FechaPropuesta)
                                </dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.FechaPropuesta)
                                </dd>
                            </dl>

                            <div>
                                <p>¿Desea eliminar este borrador?</p>
                            </div>
                            <div>
                                <a asp-area="Identity" asp-page="/Bandejas/Borradores" asp-route-id="" class="btn btn-light">Cancelar</a>
                                <button type="submit" class="btn btn-danger" title="Eliminar este Borrador">Borrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

