@page "/Correspondencia/Visualizacion/{id:int}/{tipo:int}/{usuario}"
@using Hermes2018.Services
@inject IUsuarioClaimService _usuarioClaimService
@model VisualizacionModel
@{
    ViewData["Title"] = "Hermes";
    Layout = null;
}

