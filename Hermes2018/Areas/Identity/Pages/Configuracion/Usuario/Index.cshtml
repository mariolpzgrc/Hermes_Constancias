@page "/Configuracion/Usuario"
@model IndexModel

<div class="content-wrapper pt-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item active" aria-current="page">Configuración del usuario</li>
                        </ol>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <div class="float-right pt-2">
                            <a asp-area="Identity" asp-page="/Configuracion/Usuario/Editar" asp-route-id="@Model.InfoConfiguracion.ConfiguracionUsuarioId" class="btn btn-primary btn-sm">Editar</a>  
                        </div>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Configuración del usuario</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputEmail2" class="col-form-label">Notificaciones activas:</label>
                            <span>@Model.InfoConfiguracion.NotificacionesActivas</span>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail2" class="col-form-label">Elementos por pagina:</label>
                            <span>@Model.InfoConfiguracion.ElementosPorPagina</span>
                        </div>
                        @*<div class="form-group">
                            <label for="asunto" class="col-form-label">Color:</label>
                            <span>@Model.InfoConfiguracion.Color.HER_Nombre</span>
                        </div>*@
                        <div class="form-group">
                            <label for="asunto" class="col-form-label">Puesto:</label>
                            <span>@Model.InfoConfiguracion.Puesto</span>
                        </div>
                        <div class="form-group">
                            <label for="asunto" class="col-form-label">Dirección:</label>
                            <span>@Model.InfoConfiguracion.Direccion</span>
                        </div>
                        <div class="form-group">
                            <label for="asunto" class="col-form-label">Teléfono:</label>
                            <span>@Model.InfoConfiguracion.Telefono</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>