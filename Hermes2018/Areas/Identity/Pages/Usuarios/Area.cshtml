@page "/Usuarios/Area/{id:int?}"
@model Hermes2018.Areas.Identity.Pages.Usuarios.AreaModel

<div class="@string.Format("{0}", (ConstRol.RolUsuario.Contains(Model.Info.InfoUsuarioClaims.Rol))? "content-wrapper pt-1": "content-wrapper ml-0 bg-white pt-0")">
    <div class="container-fluid" id="@string.Format("{0}", (ConstRol.RolUsuario.Contains(Model.Info.InfoUsuarioClaims.Rol))? string.Empty:"logged-in" )">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        @if (ConstRol.RolAdminGral.Contains(Model.Info.InfoUsuarioClaims.Rol))
                        {
                            <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1  display-inline">
                                <li class="breadcrumb-2-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                                </li>

                                <li class="breadcrumb-2-item display-flex">
                                    <a asp-area="Identity" asp-page="/Usuarios/Index">
                                        Usuarios
                                    </a>
                                </li>
                                <li class="breadcrumb-2-item display-flex">
                                    <a asp-area="Identity" asp-page="/Usuarios/Desglose">
                                        Desglose
                                    </a>
                                </li>
                                <li class="breadcrumb-2-item display-flex">
                                    <a asp-area="Identity" asp-page="/Usuarios/Region" asp-route-id="@Model.Info.RegionId" asp-route-areapadreid="@Model.Info.AreaPadreId">
                                        Región
                                    </a>
                                </li>
                                <li class="breadcrumb-2-item active display-flex">
                                    Área
                                </li>
                            </ol>
                        }
                        else if (ConstRol.RolAdminRegional.Contains(Model.Info.InfoUsuarioClaims.Rol))
                        {
                            <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                                <li class="breadcrumb-2-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                                </li>

                                <li class="breadcrumb-2-item display-flex">
                                    <a asp-area="Identity" asp-page="/Usuarios/Index">
                                        Usuarios
                                    </a>
                                </li>
                                <li class="breadcrumb-2-item display-flex">
                                    <a asp-area="Identity" asp-page="/Usuarios/Region" asp-route-id="@Model.Info.RegionId" asp-route-areapadreid="@Model.Info.AreaPadreId">
                                        Región
                                    </a>
                                </li>
                                <li class="breadcrumb-2-item active display-flex">
                                    Área
                                </li>
                            </ol>
                        }
                        else if (ConstRol.RolUsuario.Contains(Model.Info.InfoUsuarioClaims.Rol))
                        {
                            <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                                <li class="breadcrumb-2-item">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                                </li>

                                <li class="breadcrumb-2-item display-flex">
                                    <a asp-area="Identity" asp-page="/Usuarios/Index">
                                        Usuarios
                                    </a>
                                </li>
                                <li class="breadcrumb-2-item active display-flex">
                                    Área
                                </li>
                            </ol>
                        }
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Usuarios</h5>
                        <h6><b>Región:</b> @Model.Info.Region</h6>
                        <h6><b>Área:</b> @Model.Info.Area</h6>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-sm border-bottom responsive">
                        <thead class="bg-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().NombreUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().Rol)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().Puesto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().EsUnico)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().Estado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Info.Usuarios.First().Permiso)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Info.Usuarios)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rol)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Puesto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EsUnico)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>
                                    <td title="Permiso como administrador de área">
                                        @Html.DisplayFor(modelItem => item.Permiso)
                                    </td>
                                    <td class="font-regular-12 text-center">
                                        <a asp-page="/Usuarios/Detalles" asp-route-id="@item.NombreUsuario" class="pl-2 pr-2" title="Detalles"><i class="fab fa-wpforms font-gray"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>