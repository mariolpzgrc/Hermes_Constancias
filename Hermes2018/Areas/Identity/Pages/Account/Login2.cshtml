@page "/Account/Login2"
@model Hermes2018.Areas.Identity.Pages.Account.Login2Model
@{
    ViewData["Title"] = "Hermes";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-MX">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="keywords" content="universidad veracruzana, uv, hermes, oficio, institucional, correspondencia, seguimiento, sistema">
    <meta name="description" content="Sistema de Administración y Seguimiento de Correspondencia (HERMES)">
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
    <meta name="author" content="Universidad Veracruzana">
    <meta name="application-name" content="Hermes">
    <title>@ViewData["Title"]</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <script type="text/javascript">
        var urlObj = new Object();

        @if(Model.ConAcceso){
             @if(Model.AceptoTerminos){
                @: urlObj = { base: '@Url.Page("/Bandejas/Recibidos", new { Area = "Identity", Id = "" })' };
            }else{
                @: urlObj = { base: '@Url.Page("/Account/TerminosCondiciones", new { Area = "Identity", Id = "" })' };
            }
        }else{
             @: urlObj = { base: '@Url.Action("Index", "Home", new { Area = "", Id = "" })' };
        }

        window.location = urlObj.base;
        window.location.href = urlObj.base;
        window.location.assign(urlObj.base);
        window.location.replace(urlObj.base);
        self.location = urlObj.base;
    </script>
</head>
<body>
</body>
</html>