@page "/Delegar"
@model Hermes2018.Areas.Identity.Pages.Delegar.IndexModel

<div class="content-wrapper pt-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pt-0">
                <vc:menu-delegar user="@User" leyenda=""></vc:menu-delegar>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-0">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item active display-flex">
                                Delegados
                            </li>
                        </ol>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <div class="float-right">
                            <a asp-area="Identity" asp-page="/Delegar/Crear" asp-route-id="" class="btn btn-sm bg-primary md-btn-raised md-btn-ripple">Nuevo</a>
                        </div>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Delegados</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover border-bottom table-sm responsive">
                        <thead class="bg-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Delegados.First().Usuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Delegados.First().Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Delegados.First().Tipo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var delegado in Model.Delegados)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => delegado.Usuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => delegado.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => delegado.Tipo)
                                    </td>
                                    <td class="font-regular-12 text-center">
                                        <a asp-area="Identity" asp-page="/Delegar/Detalles" asp-route-id="@delegado.DelegarId" class="pl-2 pr-2" title="Detalles"><i class="fab fa-wpforms font-gray"></i></a>
                                        <a asp-area="Identity" asp-page="/Delegar/Editar" asp-route-id="@delegado.DelegarId" class="pl-2 pr-2" title="Editar"><i class="far fa-edit font-gray"></i></a>
                                        <a asp-area="Identity" asp-page="/Delegar/Borrar" asp-route-id="@delegado.DelegarId" class="pl-2 pr-2" title="Borrar"><i class="far fa-trash-alt font-gray"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>