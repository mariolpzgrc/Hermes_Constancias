@page "/Administracion/Usuarios"
@model Hermes2018.Areas.Identity.Pages.Administracion.Usuarios.IndexModel

<div class="content-wrapper pt-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pt-0">
                <vc:menu-delegar user="@User" leyenda=""></vc:menu-delegar>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-0">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item active display-flex">
                                Usuarios
                            </li>
                        </ol>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <div class="float-right">
                            <a asp-area="Identity" asp-page="/Administracion/Usuarios/Reasignar" asp-route-id="" class="btn btn-sm md-btn-raised md-btn-ripple bg-secondary" title="Reasignar a un usuario">Reasignar</a>
                            <a asp-area="Identity" asp-page="/Administracion/Usuarios/Crear" asp-route-id="" class="btn btn-sm md-btn-raised md-btn-ripple bg-primary" id="send-new-ofi" title="Crear un nuevo usuario">Nuevo</a>
                        </div>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Desglose por áreas</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="row">

                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-hover table-sm border-bottom responsive">
                                <thead class="bg-light">
                                    <tr>
                                        <th scope="col">Área</th>
                                        <th scope="col">Tipo</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var area in Model.Listado)
                                    {
                                        <tr>
                                            <td>@area.Nombre</td>
                                            <td>@area.Tipo</td>
                                            <td class="font-regular-12 text-center">
                                                @if (area.TipoId == ConstTipoArea.TipoN1)
                                                {
                                                    <a asp-area="Identity" asp-page="/Administracion/Usuarios/Area" asp-route-id="@area.AreaId" asp-route-tipo="@area.TipoId" class="pl-2 pr-2" title="Entrar"><i class="fab fa-wpforms font-gray"></i></a>
                                                }
                                                else
                                                {
                                                    <a asp-area="Identity" asp-page="/Administracion/Usuarios/Area" asp-route-id="@area.AreaId" asp-route-tipo="@area.TipoId" asp-route-areapadre="@area.AreaPadreId" class="pl-2 pr-2" title="Entrar"><i class="fab fa-wpforms font-gray"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>