                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 ">
                        <div class="form-group">
                            <label class="col-form-label pb-0 font-weight-bold">@Html.DisplayNameFor(model => model.ViewModel.Detalles.FechaActualizacionRegistro)</label>
                            <div class="">
                                @Html.DisplayFor(model => model.ViewModel.Detalles.FechaActualizacionRegistro)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>