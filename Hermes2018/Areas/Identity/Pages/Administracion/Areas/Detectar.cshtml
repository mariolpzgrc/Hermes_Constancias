@page "/Administracion/Areas/Detectar"
@model Hermes2018.Areas.Identity.Pages.Administracion.Areas.DetectarModel

<div class="content-wrapper pt-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>
                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Administracion/Areas/Index" asp-route-id="">Áreas</a>
                            </li>
                            <li class="breadcrumb-2-item active display-flex">
                                Detecta áreas
                            </li>
                        </ol>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <div class="float-right">
                            
                        </div>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Detecta Áreas</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-sm border-bottom responsive">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Clave</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var area in Model.Listado)
                            {
                            <tr>
                                <td>@area.Nombre</td>
                                <td>@area.Clave</td>

                                <td class="font-regular-12 text-center">
                                    @if (ConstEstadoAreaPorAgregar.EstadoN1 == area.EstadoId)
                                    {
                                        <a asp-area="Identity" asp-page="/Administracion/Areas/Agregar" asp-route-id="@area.Clave" class="pl-2 pr-2" title="Agregar"><i class="far fa-plus-square font-gray"></i></a>
                                    }
                                    else
                                    {
                                        <span class="font-gray small" title="Añadida">Añadida</span>
                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>