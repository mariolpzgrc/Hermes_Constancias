@page "/Carpetas/Borrar/{id:int}"
@model Hermes2018.Areas.Identity.Pages.Carpetas.BorrarModel

<div class="content-wrapper pt-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Carpetas/Index">Carpetas</a>
                            </li>
                            <li class="breadcrumb-2-item active display-flex" aria-current="page">Borrar carpeta</li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Borrar carpeta</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger error-list-clean"></div>
                            <input asp-for="InfoUsuarioId" class="sin-indicador" />
                            <input asp-for="Borrar.CarpetaId" class="sin-indicador" />
                            <input asp-for="Borrar.NombreCarpeta" class="sin-indicador" />

                            <dl class="">
                                <dt class="">
                                    @Html.DisplayNameFor(x => x.Borrar.NombreCarpeta)
                                </dt>
                                <dd class="">
                                    @Html.DisplayFor(x => x.Borrar.NombreCarpeta)
                                </dd>
                            </dl>

                            <div>
                                <p>¿Desea borrar esta carpeta?</p>
                            </div>
                            <div>
                                <a asp-area="Identity" asp-page="/Carpetas/Index" class="btn btn-light" title="Regresar">Cancelar</a>
                                <button type="submit" class="btn btn-danger" title="Borrar la carpeta definitivamente">Borrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>