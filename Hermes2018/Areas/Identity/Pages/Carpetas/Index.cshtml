@page  "/Carpetas"
@model IndexModel

<div class="content-wrapper pt-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pt-0">
                <vc:menu-delegar user="@User" leyenda="Carpetas de:"></vc:menu-delegar>
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-0">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item active display-flex" aria-current="page">Carpetas</li>
                        </ol>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-0">
                        <div class="float-right">
                            @if (!Model.ActivaDelegacion || (Model.ActivaDelegacion && Model.BandejaPermiso == ConstDelegar.TipoN1))
                            {
                                <a asp-area="Identity" asp-page="/Carpetas/Crear" class="btn btn-sm md-btn-raised md-btn-ripple bg-primary">Nuevo</a>
                            }
                        </div>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Carpetas</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-sm border-bottom responsive">
                        <thead class="bg-light">
                            <tr>
                                <th>Carpeta</th>
                                <th>Fechas de creación</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Carpetas)
                            {
                                <tr>
                                    <td>
                                        @item.Nombre
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fecha)
                                    </td>
                                    <td class="font-regular-12 text-center">
                                        <a asp-area="Identity" asp-page="/Carpetas/Detalles" asp-route-id="@item.CarpetaId" class="pl-2 pr-2" title="Detalles"><i class="fab fa-wpforms font-gray"></i></a>
                                        @if (!Model.ActivaDelegacion || (Model.ActivaDelegacion && Model.BandejaPermiso == ConstDelegar.TipoN1))
                                        {
                                            <a asp-area="Identity" asp-page="/Carpetas/Editar" asp-route-id="@item.CarpetaId" class="pl-2 pr-2" title="Editar"><i class="far fa-edit font-gray"></i></a>
                                            <a asp-area="Identity" asp-page="/Carpetas/Borrar" asp-route-id="@item.CarpetaId" class="pl-2 pr-2" title="Borrar"><i class="far fa-trash-alt font-gray"></i></a>
                                        }
                                        <a asp-area="Identity" asp-page="/Subcarpetas/Index" asp-route-id="@item.CarpetaId" class="pl-2 pr-2" title="Subcarpetas"><i class="far fa-folder font-gray"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>