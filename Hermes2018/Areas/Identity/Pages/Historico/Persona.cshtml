@page "/Historico/Persona"
@model PersonaModel

<div class="content-wrapper pt-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 pt-2">
                        <ol class="breadcrumb-2 mt-0 mb-0 pb-1 pt-1 display-inline">
                            <li class="breadcrumb-2-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="">Inicio</a>
                            </li>

                            <li class="breadcrumb-2-item">
                                <a asp-area="Identity" asp-page="/Bandejas/Historico" asp-route-id="">Histórico</a>
                            </li>
                            <li class="breadcrumb-2-item active">
                                Histórico por persona
                            </li>
                        </ol>
                    </div>
                    <div class="col-12">
                        <hr class="hr-thick mb-1 mt-1" />
                        <h5>Histórico por persona</h5>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-sm border-bottom responsive">
                        <thead class="bg-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Usuario</th>
                                <th>Región</th>
                                <th>Área</th>
                                <th>Puesto</th>
                                <th>Registro</th>
                                <th>Últimos cambios</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var registro in Model.ListadoHistorico)
                            {
                            <tr>
                                <td>@registro.NombreCompleto</td>
                                <td>@registro.UserName</td>
                                <td>@registro.Region</td>
                                <td>@registro.Area</td>
                                <td>@registro.Puesto</td>
                                <td>@registro.FechaRegistro</td>
                                <td>@registro.FechaActualizacion</td>
                                <td class="font-regular-12 text-center">
                                    <a asp-area="Identity" asp-page="/Historico/Bandejas" asp-route-infoUsuarioId="@registro.InfoUsuarioId" asp-route-tipohistorico="@ConstHistorico.ConstTipoN1" class="pl-2 pr-2" title="Entrar"><i class="fab fa-wpforms font-gray"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>